// Add these modules to your ~/.config/waybar/modules.json

"custom/cava-left": {
    "exec": "~/.config/ml4w/scripts/cava-waybar.sh",
    "format": "{}",
    "return-type": "",
    "interval": 0,
    "escape": false,
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/cava-opener.sh top"
},

"custom/cava-right": {
    "exec": "~/.config/ml4w/scripts/cava-waybar.sh",
    "format": "{}",
    "return-type": "",
    "interval": 0,
    "escape": false,
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/cava-opener.sh bottom"
}

